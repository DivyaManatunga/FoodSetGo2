<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewNonVegName"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <EditText
        android:id="@+id/updatenonvegname"
        android:layout_width="390dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Enter new name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/updatenonvegdescription"
        android:layout_width="390dp"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Enter new description"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/updatenonveg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:background="@drawable/updatebutton"
        android:text="Update"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/deletenonveg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="213dp"
        android:background="@drawable/deletebutton"
        android:text="Delete"
        android:textAllCaps="false" />
</RelativeLayout>